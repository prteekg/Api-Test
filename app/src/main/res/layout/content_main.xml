<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.citryx.app.TravelActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="368dp"
                android:layout_height="495dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp"
                android:background="@mipmap/background">

                <ImageButton
                    android:id="@+id/airportImagetButton"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimary"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/app_planner_airport"
                    android:contentDescription=""
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/trainImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignLeft="@+id/airportImagetButton"
                    android:layout_alignStart="@+id/airportImagetButton"
                    android:layout_below="@+id/airportImagetButton"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorPrimary"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/app_planner_tgv_trains"
                    tools:ignore="ContentDescription" />
                
                <ImageButton
                    android:id="@+id/busImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignLeft="@+id/trainImageButton"
                    android:layout_alignStart="@+id/trainImageButton"
                    android:layout_below="@+id/trainImageButton"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorPrimary"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/app_planner_bus"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/taxImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignLeft="@+id/busImageButton"
                    android:layout_alignStart="@+id/busImageButton"
                    android:layout_below="@+id/busImageButton"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorPrimary"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/app_planner_taxi"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
